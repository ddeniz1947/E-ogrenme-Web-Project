
@model Eogrenme.ViewModels.OgrenciResetPassword

@{

    ViewBag.Title = "OgrenciResetPassword";

    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<h2 class="display-4">@Model.Username Adlı Öğrencinin Parolasını Resetle </h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <input type="submit" value="Parolayı Resetle" class="btn btn-primary" />
    <a href="@Url.RouteUrl("Teacher")">Ya da İptal Et</a>
}
