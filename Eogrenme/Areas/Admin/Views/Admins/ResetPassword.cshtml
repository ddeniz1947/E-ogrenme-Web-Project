@model Eogrenme.Areas.Admin.ViewModels.AdminResetPassword

@{
    ViewBag.Title = "ResetPasword";

}
<h2 class="display-4">Reset Password for @Model.Username</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <input  type="submit" value="Parolayı Resetle" class="btn btn-primary"/>
    <a href="@Url.RouteUrl("Panel")">Ya da İptal Et</a>
}
